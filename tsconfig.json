{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "outDir": "dist"
  },
  "include": [
    "agent/**/*.ts",
    "agent/steps/**/*.ts",
    "scripts/**/*.ts",
    "jest.config.ts"
  ],
  "exclude": ["node_modules", "cypress"]
}
